@model RaceDirector.Models.ViewModels.CreateRaceVM

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>RaceVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Трасса</label>
                <input asp-for="TrackName" class="form-control" />
                <span asp-validation-for="TrackName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Класс</label>
                <select asp-for="RaceClass" asp-items="@(new SelectList(Model.PossibleRaceClasses, "Id", "Name"))" class="form-control" ></select>
                <span asp-validation-for="RaceClass" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Дата проведения</label>
                <input asp-for="RaceDate" class="form-control" type="date" />
                <span asp-validation-for="RaceDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
